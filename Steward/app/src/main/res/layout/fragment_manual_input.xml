<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/text_manual_input"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="手动验证"
        android:textColor="@color/colorTitleText"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:layout_below="@id/text_manual_input"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/id_text_verification_code_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:layout_weight="3"
            android:hint="@string/verification_code_hint"
            android:background="@drawable/rounded_verification_code_et"
            android:paddingLeft="30dp"/>

        <Button
            android:id="@+id/id_sure_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="验证"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_verification_btn"/>

    </LinearLayout>

</RelativeLayout>