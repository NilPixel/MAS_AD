<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appBar">

    <LinearLayout
        android:id="@+id/naviLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/colorNavigation">

        <ImageView
            android:id="@+id/id_placeHolder_image"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:background="@color/clearColor"
            android:layout_marginRight="15dp">

        </ImageView>

        <!--返回按钮-->
        <ImageButton
            android:id="@+id/naviBack"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_navi_back"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <!--扫描二维码菜单-->
        <Button
            android:id="@+id/ibScanMenu"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:background="@mipmap/ic_scan"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/id_setting"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:text="@string/setting"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:background="@color/clearColor"/>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>